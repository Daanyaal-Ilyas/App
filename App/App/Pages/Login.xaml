<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.Login">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Login" FontSize="Large" TextColor="#2196F3" FontAttributes="Bold" HorizontalOptions="Center" />
            <Entry x:Name="UsernameEntry" Placeholder="Username" BackgroundColor="#F5F5F5" TextColor="#333333" FontSize="Medium" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="#F5F5F5" TextColor="#333333" FontSize="Medium" />
            <Button Text="Login" BackgroundColor="#2196F3" TextColor="White" FontSize="Medium" CornerRadius="5" Clicked="LoginButton_Clicked" />
            <Button Text="Register" BackgroundColor="#EEEEEE" TextColor="#333333" FontSize="Medium" CornerRadius="5" Clicked="RegisterButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

