<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.CreatePost">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Title" />
                <Entry x:Name="TitleEntry" />
                <Label Text="Description" />
                <Editor x:Name="DescriptionEditor" HeightRequest="100" />
                <Label Text="Upload Image" />
                <Button Text="Choose Image" Clicked="ChooseImageButton_Clicked" />
                <Image x:Name="PostImage" Aspect="AspectFill" HeightRequest="200" />
                <Button Text="Create Post" Clicked="CreatePostButton_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>