<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.Register"
             BackgroundColor="{StaticResource PrimaryColor}">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Name" TextColor="White" />
            <Entry x:Name="NameEntry" TextColor="{StaticResource PrimaryColor}" />
            <Label Text="Email" TextColor="White" />
            <Entry x:Name="EmailEntry" TextColor="{StaticResource PrimaryColor}" />
            <Label Text="Username" TextColor="White" />
            <Entry x:Name="UsernameEntry" TextColor="{StaticResource PrimaryColor}" />
            <Label Text="Password" TextColor="White" />
            <Entry x:Name="PasswordEntry" IsPassword="True" TextColor="{StaticResource PrimaryColor}" />
            <Button Text="Register" Clicked="RegisterButton_Clicked" BackgroundColor="{StaticResource AccentColor}" TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
